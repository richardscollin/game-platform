    "@types/express": "^4.17.13",
    "@types/ws": "^8.5.3",
    "esbuild": "^0.15.6",
    "nodemon": "^2.0.19",
    "typedoc": "^0.23.11",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "nanoid": "^4.0.0",
    "ws": "^8.8.1"
  }
