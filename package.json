{
  "name": "game-platform",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "node esbuild.js",
    "build-server": "tsc",
    "check": "tsc --noEmit",
    "coturn": "docker run -d --network=host --mount type=tmpfs,destination=/var/lib/coturn coturn/coturn",
    "dev": "nodemon --ignore out --watch src --exec 'yarn build && yarn docs && yarn start'",
    "docs": "typedoc --out public/docs src/server.ts src/static/host/host.ts src/static/client.ts src/types/index.d.ts",
    "start": "node out/server.js"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "iOS >= 14.0",
    "Firefox ESR"
  ],
  "author": "",
  "license": "UNLICENSED",
