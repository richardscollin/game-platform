{
    "compilerOptions": {
        "target": "ES6",
        "module": "es6",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "out",
        "moduleResolution": "Node16",
        "allowSyntheticDefaultImports": false,
    },
    "include": [
        "src/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "src/static/lib/qrcodegen.js",
    ],
}