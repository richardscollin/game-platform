{
    "compilerOptions": {
        "target": "ESNext",
        "module": "es6",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "out",
        "moduleResolution": "Node16",
        "allowSyntheticDefaultImports": false,
    },
    "include": [
        "src/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "src/lib/qrcodegen.js",
    ],
    "typedocOptions": {
        "entryPoints": [
            "src/client.ts",
            "src/host/host.ts",
        ],
        "out": "out/docs"
    }
}